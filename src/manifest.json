{
  "manifest_version": 2,
  "name": "letterboxd-extra-ratings",
  "description": "Display of imdb/metacritic ratings to letterboxd film pages",
  "version": "0.1.0",
  "icons": {
    "128": "images/icon128.png",
    "48": "images/icon48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://letterboxd.com/film/*"
      ],
      "css": [
        "main.css"
      ],
      "js": [
        "contentscript.js"
      ]
    }
  ],
  "permissions": [
    "http://wrapapi.com/",
    "https://wrapapi.com/"
  ]
}
